<?xml version="1.0" encoding="UTF-8"?>

<portlet-app
    xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_1_0.xsd"
    version="1.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_1_0.xsd
                        http://java.sun.com/xml/ns/portlet/portlet-app_1_0.xsd">

    <portlet>
        <description>EmailPortlet</description>
        <portlet-name>EmailPortlet</portlet-name>
        <display-name>Email Notification Portlet</display-name>

        <portlet-class>org.exoplatform.support.EmailPortlet</portlet-class>

        <supports>
            <mime-type>text/html</mime-type>
            <portlet-mode>VIEW</portlet-mode>
        </supports>

        <supported-locale>en</supported-locale>

        <portlet-info>
            <title>Email Portlet</title>
            <short-title>Email Portlet</short-title>
            <keywords>email notification</keywords>
        </portlet-info>
    </portlet>

</portlet-app>
